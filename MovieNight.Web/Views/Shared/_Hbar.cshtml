                return `<a href="${detailsUrl}" class='dropdown-item notify-item'>
                <div class='notify-icon bg-soft-primary text-primary'>
                    <img src="${item.PosterImage}" class='img-fluid rounded-circle' alt='${item.Title}'>
                </div>
                <p class='notify-details'>${item.Title} <small class='text-muted'>${item.ProductionYearS}</small></p>
