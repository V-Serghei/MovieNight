@model MovieNight.Web.Models.Mail.InboxModel
@{
    ViewBag.Title = "Read";
}

@if (Model != null)
{
    <div>
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Movie Night</a></li>
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
                                    <li class="breadcrumb-item active">Email Read</li>
                                </ol>
                            </div>
                            <h4 class="page-title text-warning font-weight-bold">Email Read</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title -->
                <!-- Right Sidebar -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-box">
                            <!-- Left sidebar -->
                            <div class="inbox-leftbar">

                                <a href=@Url.Action("Compose", "DataTransfer") class="btn btn-primary btn-block waves-effect waves-light">Compose</a>

                                <div class="mail-list mt-4">
                                    <a href=@Url.Action("Inbox", "DataTransfer") class="list-group-item border-0 text-primary font-weight-bold"><i class="mdi mdi-inbox font-18 align-middle mr-2"></i>Inbox</a>
                                    <a href=@Url.Action("Starred", "DataTransfer") class="list-group-item border-0 text-warning font-weight-bold"><i class="mdi mdi-star font-18 align-middle mr-2"></i>Starred</a>
                                    <a href=@Url.Action("SentMail", "DataTransfer") class="list-group-item border-0"><i class="mdi mdi-send font-18 align-middle mr-2"></i>Sent Mail</a>
                                </div>

                            </div>
                            <!-- End Left sidebar -->

                            <div class="inbox-rightbar">
                                <div class="mt-4">
                                    <h5 class="font-18">
                                            @Model.Theme
                                    </h5>

                                    <div class="media mb-4 mt-1">
                                        @* <img class="d-flex mr-2 rounded-circle avatar-sm" src=@Model. alt="Generic placeholder image"> *@
                                        <div class="media-body">
                                            <span class="float-right">
                                                    @Model.Date
                                            </span>
                                            <h6 class="m-0 font-14">
                                                    @Model.SenderName
                                            </h6>
                                        </div>
                                    </div>

                                    <p>
                                            @Model.Message
                                    </p>

                                    <hr/>
                                </div> <!-- card-box -->

                            </div>
                            <!-- end inbox-rightbar-->
                        </div>

                    </div> <!-- end Col -->

                </div><!-- End row -->


            </div> <!-- container -->

        </div> <!-- content -->

    </div>
}
