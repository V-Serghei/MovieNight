
@{
    ViewBag.Title = "Top";
}

<div>
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Movie Night</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Media</a></li>
                                <li class="breadcrumb-item active">Top</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Top</h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-12">

                    <!-- Pricing Title-->
                    <div class="text-center pb-2">
                        <h3 class="mb-2">Our <span class="text-primary">Top</span></h3>
                        <p class="text-muted w-50 m-auto">
                            Highest rated motion pictures!
                        </p>
                    </div>

                    <!-- Plans -->
                    <div class="row my-3">
                        <div class="col-xl-3 col-md-6">
                            <div class="card card-pricing">
                                <div class="card-body text-center">
                                    <p class="card-pricing-plan-name font-weight-bold text-uppercase">The best</p>
                                    <span class="card-pricing-icon text-primary">
                            <i class="fe-at-sign"></i>
                        </span>
                                    <h2 class="card-pricing-price">$9 <span>/ Month</span></h2>
                                    <button class="btn btn-primary waves-effect waves-light mt-4 btn-block">Watch now</button>
                                </div>
                            </div> <!-- end Pricing_card -->
                        </div> <!-- end col -->

                        <div class="col-xl-3 col-md-6">
                            <div class="card card-pricing">
                                <div class="card-body text-center">
                                    <p class="card-pricing-plan-name font-weight-bold text-uppercase">Not bad</p>
                                    <span class="card-pricing-icon text-primary">
                            <i class="fe-users"></i>
                        </span>
                                    <h2 class="card-pricing-price">$19 <span>/ Month</span></h2>
                                    <button class="btn btn-primary waves-effect waves-light mt-4 btn-block">Watch now</button>
                                </div>
                            </div> <!-- end Pricing_card -->
                        </div> <!-- end col -->

                        <div class="col-xl-3 col-md-6">
                            <div class="card card-pricing ribbon-box">
                                <div class="ribbon-two ribbon-two-danger"><span>Popular</span></div>
                                <div class="card-body text-center">
                                    <p class="card-pricing-plan-name font-weight-bold text-uppercase">Terrible</p>
                                    <span class="card-pricing-icon bg-danger text-white">
                            <i class="fe-award"></i>
                        </span>
                                    <h2 class="card-pricing-price">$29 <span>/ Month</span></h2>
                                    <button class="btn btn-danger waves-effect mt-4 btn-block">Watch now</button>
                                </div>
                            </div> <!-- end Pricing_card -->
                        </div> <!-- end col -->

                    </div>
                    <!-- end row -->

                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>


