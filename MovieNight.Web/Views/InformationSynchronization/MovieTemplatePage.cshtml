                        <script>
                            function rate(stars) {
                                let starElements = document.querySelectorAll('.star');
                                for (let i = 0; i < starElements.length; i++) {
                                    if (i < stars) {
                                        starElements[i].classList.add('active');
                                        starElements[i].innerHTML = '<i class="  remixicon-star-s-fill"></i>';
                                    } else {
                                        starElements[i].classList.remove('active');
                                        starElements[i].innerHTML = '<i class=" remixicon-star-s-line"></i>';
                                    }
                                }
                            }
