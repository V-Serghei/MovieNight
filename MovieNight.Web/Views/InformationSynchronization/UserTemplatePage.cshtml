@using System.Globalization
@using System.Threading
@using MovieNight.Domain.enams
@model MovieNight.Web.Models.Friends.FriendPageModel

@{
ViewBag.Title = "Personal Profile";
var percentageA = (float)((Model.AnimeCount * 100) / (float) Model.AnimeTotal);
var percentageC = (float)((Model.CartonsCount * 100) / (float) Model.CartonTotal);
var percentageS = (float)((Model.SerialsCount * 100) / (float) Model.SerialTotal);
var percentageF = (float)((Model.FilmCount * 100) / (float) Model.FilTotal);
}
<style>
    .poster-image {
        width: 100%;
        height: 0;
        padding-top: 100%;
        background-size: cover;
        background-position: center;
    }

</style>
<style>
    .achievement-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .achievement-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 16px rgba(0,0,0,0.2);
    }

    .achievement-img {
        width: 100%;
        height: auto;
        border-radius: 10px 10px 0 0;
    }

    .achievement-content {
        padding: 15px;
    }

    .achievement-content h5 {
        margin-top: 0;
        margin-bottom: 10px;
        font-size: 18px;
    }

    .achievement-content p {
        margin: 0;
        font-size: 14px;
        color: #555;
    }

    .achievement-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    .achievement-status {
        font-size: 18px;
    }

    .achievement-status .unlocked {
        color: green;
    }

    .achievement-status .locked {
        color: red;
    }

    .achievement-progress {
        font-size: 14px;
        color: #777;
    }
    .achievement-card {
        transition: all 0.3s ease;
    }

    .achievement-card.locked {
        filter: grayscale(100%);
        opacity: 0.6;
    }

    .achievement-card.locked .achievement-img,
    .achievement-card.locked h5,
    .achievement-card.locked p {
        color: grey;
    }

    .achievement-card.locked:hover .achievement-img,
    .achievement-card.locked:hover h5,
    .achievement-card.locked:hover p {
        color: grey;
    }

    .achievement-status i {
        cursor: pointer;
    }
</style>

<div>
    <div class="content">

        <!-- Start Content-->
        @if (Model is not { MsgResp: null })
        {
        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card">

                            <div class="card-body p-4">


                                <div class="text-center w-75 m-auto">
                                    <a href=@Url.Action("Primary","MainPage")>
                                        <span><img src="~/images/logo_text.png" alt="" height="44"></span>
                                    </a>
                                </div>
                                <div class="text-center">
                                    <div class="mt-4">
                                        <div class="logout-checkmark">


                                        </div>
                                    </div>

                                    <h3>@Model.MsgResp.Substring(0, Model.MsgResp.IndexOf("!", StringComparison.Ordinal))</h3>

                                    <p class="text-muted">@Model.MsgResp.Substring(Model.MsgResp.IndexOf("!", StringComparison.Ordinal) + 1)</p>

                                    <div class="text-center w-75 m-auto">
                                        <a href="@Url.Action("Login","Identification")">
                                            <button type="button" class="btn btn-outline-primary waves-effect waves-light">

                                                LOG IN
                                            </button>
                                        </a>


                                    </div>
                                </div>

                            </div> <!-- end card-body -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


        }
        else
        {
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Movie Night</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Profile</a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Profile</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-4 col-xl-4">
                    <div class="card-box text-center">
                        @if (Model.Avatar == null)
                        {
                        <img src="~/images/users/default_avatar.png" class="rounded-circle avatar-xl img-thumbnail"
                             alt="profile-image" enctype="multipart/form-data">
                        }
                        else
                        {

                        <img src="@Url.Content(@Model.Avatar)" class="rounded-circle avatar-xl img-thumbnail" alt="profile-image">

                        }

                        @if (Model.BUserE.Username != null){ <h4 class="mb-0">@Model.BUserE.Username'</h4>}
                        @if (Model.Quote != null){<p class="text-muted">@Model.Quote</p>}
                        <a href=@Url.Action("PersonalPromotionStatistics", "Statistic")>
                            <button type="button" class="btn btn-dark btn-xs waves-effect mb-2 waves-light">Personal Statistic</button>
                        </a>
                        <div class="text-left mt-3">
                            @if (Model.AboutMe != null){<h4 class="font-13 text-uppercase">About Me :</h4>
                            <div class="about-me">
                                <p class="text-muted font-13 mb-3" style="word-break: break-word;">
                                    @Model.AboutMe
                                </p>
                            </div>

                            }

                            @if(Model.LastName != null|| Model.FirstName!=null){<p class="text-muted mb-2 font-13"><strong>Full Username :</strong> <span class="ml-2"> @if (Model.LastName != null){@Model.LastName}
                                    @if (Model.FirstName != null){@Model.FirstName}</span></p>}

                            @if(Model.PhoneNumber != null) { <p class="text-muted mb-2 font-13">
                                <strong>Mobile :</strong>
                                <span class="ml-2">
                                        @Model.PhoneNumber
                                    </span>
                            </p>
                            }
                            @if(Model.Gender != null) { <p class="text-muted mb-2 font-13">
                                <strong>Gender :</strong>
                                <span class="ml-2">
                                                                  @Model.Gender
                                                              </span>
                            </p>
                            }
                            @if (Model.DataBirth != default(DateTime) && Model.DataBirth != new DateTime(1753, 1, 1)) { <p class="text-muted mb-2 font-13">
                                @{ CultureInfo culture = new CultureInfo("en-US"); }
                                @{ Thread.CurrentThread.CurrentCulture = culture; }
                                <strong>DataBirth :</strong>
                                <span class="ml-2">
                                                                @Model.DataBirth.ToString("dd MMMM yyyy")
                                                            </span>
                            </p>
                            }

                            @if(Model.BUserE.Email!=null) {<p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 ">@Model.BUserE.Email</span></p>}

                            @if(Model.Country!=null)  {<p class="text-muted mb-1 font-13"><strong>Location :</strong> <span class="ml-2">@Model.Country</span></p>}
                        </div>
                        @if (Model.Facebook != null || Model.Instagram != null || Model.GitHab != null || Model.Twitter != null)
                        {
                        <ul class="social-list list-inline mt-3 mb-0">
                            <li class="list-inline-item">
                                @if(Model.Facebook!=null){<a href="@Model.Facebook" class="social-list-item border-purple text-purple">
                                           <span class="facebook-icon-wrapper">
                                               <i class="mdi mdi-facebook"></i>
                                               <span class="facebook-hover-text" style="opacity: 0; transition: opacity 0.3s ease;">@Model.Facebook</span>
                                           </span>
                                </a>}
                            </li>
                            <li class="list-inline-item">
                                @if(Model.Instagram!=null){<a href="@Model.Instagram" class="social-list-item border-danger text-danger">
                                           <span class="instagram-icon-wrapper">
                                               <i class="mdi mdi-instagram"></i>
                                               <span class="instagram-hover-text" style="opacity: 0; transition: opacity 0.3s ease;">@Model.Instagram</span>
                                           </span>
                                </a>}
                            </li>
                            <li class="list-inline-item">
                                @if(Model.Twitter!=null){<a href="@Model.Twitter" class="social-list-item border-info text-info">
                                           <span class="twitter-icon-wrapper">
                                               <i class="mdi mdi-twitter"></i>
                                               <span class="twitter-hover-text" style="opacity: 0; transition: opacity 0.3s ease;">@Model.Twitter</span>
                                           </span>
                                </a>}
                            </li>
                            <li class="list-inline-item">
                                @if(Model.GitHab!=null){ <a href="skype:@Model.GitHab" class="social-list-item border-secondary text-secondary">
                                    <i class="mdi mdi-github-circle"></i>
                                    <span class="github-icon-wrapper">
                                               <i class="mdi mdi-github"></i>
                                               <span class="github-hover-text" style="opacity: 0; transition: opacity 0.3s ease;">@Model.GitHab</span>
                                           </span>
                                </a>}
                            </li>
                        </ul>
                        }

                    </div> <!-- end card-box -->

                    @if(percentageS!=null && percentageA != null && percentageF != null && percentageC != null){   <div class="card-box">
                        <h4 class="header-title">Viewing percentage</h4>
                        <p class="mb-3">How many have you looked from the entire world base, so you can call yourself a fan of this genre</p>

                        @if(Model.AnimeCount!=null){
                        <div class="pt-1">
                            <h6 class="text-uppercase mt-0">Anime <span class="float-right">@percentageA %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="@percentageA" aria-valuemin="0" aria-valuemax="100" style="width: @percentageA%">
                                    <span class="sr-only">@percentageA % Complete</span>
                                </div>
                            </div>
                        </div>

                        }
                        else
                        {
                        <div class="pt-1">
                            <h6 class="text-uppercase mt-0">Anime <span class="float-right">0 %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                    <span class="sr-only">0 % Complete</span>
                                </div>
                            </div>
                        </div>
                        }

                        @if(Model.CartonsCount!=null){<div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Cartons<span class="float-right">@percentageC %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="@percentageC" aria-valuemin="0" aria-valuemax="100" style="width: @percentageC%">
                                    <span class="sr-only">@percentageC % Complete</span>
                                </div>
                            </div>
                        </div>}
                        else
                        {
                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Cartons<span class="float-right">0 %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                    <span class="sr-only">0 % Complete</span>
                                </div>
                            </div>
                        </div>
                        }

                        @if(Model.FilmCount!=null){<div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Films <span class="float-right">@percentageF %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="@percentageF" aria-valuemin="0" aria-valuemax="100" style="width: @percentageF%">
                                    <span class="sr-only">@percentageF % Complete</span>
                                </div>
                            </div>
                        </div>}
                        else
                        {
                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Films <span class="float-right">0 %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                    <span class="sr-only">0 % Complete</span>
                                </div>
                            </div>
                        </div>

                        }

                        @if(Model.SerialsCount!=null){ <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Serials <span class="float-right">@percentageS %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="@percentageS" aria-valuemin="0" aria-valuemax="100" style="width: @percentageS%">
                                    <span class="sr-only">@percentageS % Complete</span>
                                </div>
                            </div>
                        </div>}
                        else
                        {
                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Serials <span class="float-right">0 %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                    <span class="sr-only">0 % Complete</span>
                                </div>
                            </div>
                        </div>
                        }
                        @{var total = percentageA + percentageC + percentageF + percentageS; }

                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Total <span class="float-right">@total %</span></h6>
                            <div class="progress progress-sm m-0">
                                <div class="progress-bar bg-purple" role="progressbar" aria-valuenow="@total" aria-valuemin="0" aria-valuemax="100" style="width: @total%">
                                    <span class="sr-only">@total % Complete</span>
                                </div>
                            </div>
                        </div>

                    </div> <!-- end card-box-->}

                </div> <!-- end col-->

                <div class="col-lg-8 col-xl-8">
                    <div class="card-box">
                        <ul class="nav nav-pills navtab-bg">
                            <li class="nav-item">
                                <a href="#about-me" data-toggle="tab" aria-expanded="true" class="nav-link active ml-0">
                                    <i class="mdi mdi-face-profile mr-1"></i>My activity
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#achievements" data-toggle="tab" aria-expanded="false" class="nav-link">
                                    <i class="remixicon-award-line"></i>Achievements
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">

                            <div class="tab-pane show active" id="about-me">

                                <h5 class="mb-4 text-uppercase">
                                    <i class="remixicon-film-line"></i>
                                    Viewing history
                                </h5>


                                <ul class="list-unstyled timeline-sm">

                                    @foreach (var viewingHistory in Model.ViewingHistory)
                                    {
                                    string[] parts = viewingHistory.ReviewDate.Split(' ');
                                    string datePart = parts[0];
                                    string timePart = parts[1];

                                    <li class="timeline-sm-item">
                                                <span class="timeline-sm-date">
                                                    @datePart
                                                </span>
                                        <div class="dropdown notification-list">
                                            <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">


                                                        <span class="pro-user-name ml-1">
                                                            <i class="mdi mdi-chevron-down"></i>
                                                        </span>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right profile-dropdown " style=width:400px!important;>
                                                <div class="dropdown-header noti-title">
                                                    <h6 class="text-overflow m-0">Additional:
                                                    </h6>
                                                </div>

                                                @if (viewingHistory.Description != null)
                                                {
                                                <a class="dropdown-item notify-item">
                                                    <i class=" remixicon-device-line"></i>
                                                    <span>Description:</span><br/>
                                                    <p style="white-space: pre-wrap;">@viewingHistory.Description</p>
                                                </a>
                                                }

                                                @if (viewingHistory.TimeSpent != null)
                                                {
                                                <a class="dropdown-item notify-item">
                                                    <i class="remixicon-time-fill"></i>
                                                    <span>Time Spent:</span><br/>
                                                    <p>
                                                        @timePart
                                                    </p>

                                                </a>
                                                }

                                                @if (viewingHistory.UserComment != null)
                                                {
                                                <a class="dropdown-item notify-item">
                                                    <i class=" remixicon-edit-2-line"></i>

                                                    <span> Your Comment:</span><br/>
                                                    <p>@viewingHistory.UserComment</p>
                                                </a>
                                                }

                                                @if (viewingHistory.UserViewCount != null)
                                                {
                                                <a class="dropdown-item notify-item">
                                                    <i class="remixicon-gradienter-line"></i>
                                                    <span>Your View Count:</span><br/>
                                                    <p>@viewingHistory.UserViewCount</p>
                                                </a>
                                                }

                                                <div class="dropdown-divider"></div>



                                            </div>
                                        </div>
                                        <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = viewingHistory.Id })">
                                            <h5 class="mt-0 mb-1">@viewingHistory.Title</h5></a>
                                        <div class="row">
                                            <div class="col-md-10 col-xl-9">
                                                <style>
                                                    .star-rating {
                                                        display: flex;
                                                        justify-content: center;
                                                        align-items: center;
                                                        width: 100%;
                                                    }

                                                    .star-rating .star {
                                                        width: 20px;
                                                        height: 20px;
                                                        cursor: pointer;
                                                        font-size: 20px;
                                                    }

                                                    .star-rating .star.active {
                                                        color: #f00;
                                                    }
                                                </style>
                                                <br>
                                                <h1>The film's score</h1>
                                                <div class="star-rating">
                                                    @if (viewingHistory.UserValues != 0)
                                                    {
                                                    for (int i = 1; i <= 10; i++)
                                                    {
                                                    if (i <= viewingHistory.UserValues)
                                                    {
                                                    <span class="star active" onclick="rate(@i,@viewingHistory.Id)"><i class="remixicon-star-s-fill"></i></span>
                                                    }
                                                    else
                                                    {
                                                    <span class="star" onclick="rate(@i,@viewingHistory.Id)"><i class="remixicon-star-s-line"></i></span>
                                                    }
                                                    }
                                                    }
                                                    else
                                                    {
                                                    for (int i = 1; i <= 10; i++)
                                                    {
                                                    <span class="star" onclick="rate(@i,@viewingHistory.Id)"><i class="remixicon-star-s-line"></i></span>
                                                    }
                                                    }
                                                </div>






                                            </div>


                                            <div class="col-md-6 col-xl-3">
                                                <div class="rounded-circle avatar-xl img-thumbnail poster-image" style="background-image: url('@Url.Content(@viewingHistory.Poster)')"></div>
                                            </div>

                                        </div>

                                    </li>

                                    }
                                </ul>
                                <a href="@Url.Action("ViewedList","SearchSortAdd")" class="dropdown-item text-center text-primary notify-item notify-all">
                                    View all viewings
                                    <i class="fi-arrow-right"></i>
                                </a>

                                <h5 class="mb-3 mt-4 text-uppercase">
                                    <i class="remixicon-send-plane-2-fill"></i>
                                    In the plans
                                </h5>
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <thead class="thead-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Title of the film</th>
                                            <th>Release date</th>
                                            <th>Number of views</th>
                                            <th>Genre</th>
                                            <th style="width:200px">Grade </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var modelListInThePlan in @Model.ListInThePlans)
                                        {
                                        <tr>
                                            <td></td>
                                            <td>
                                                <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = modelListInThePlan.MovieId })">
                                                    @modelListInThePlan.Name
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = modelListInThePlan.MovieId })">
                                                    @modelListInThePlan.Date.ToString("dd/MM/yyyy")
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = modelListInThePlan.MovieId })">
                                                    @modelListInThePlan.NumberOfViews
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = modelListInThePlan.MovieId })">
                                                    @{
                                                    var genresArray = modelListInThePlan.Genre
                                                    .Replace("\\\"", "")
                                                    .Replace("]", "")
                                                    .Replace("[", "")
                                                    .Replace("\"", "")
                                                    .Trim('[', ']')
                                                    .Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries)
                                                    .Select(genre => genre.Trim())
                                                    .ToArray();
                                                    }

                                                    @foreach (var genre in genresArray)
                                                    {
                                                    <span class="badge badge-info">@genre</span><br>
                                                    }

                                                    @if (modelListInThePlan.Tags == FilmCategory.Film)
                                                    {
                                                    <span class="badge badge-info">Film</span>
                                                    }
                                                    else if (modelListInThePlan.Tags == FilmCategory.Anime)
                                                    {
                                                    <span class="badge badge-info">Anime</span>
                                                    }
                                                    else if (modelListInThePlan.Tags == FilmCategory.Serial)
                                                    {
                                                    <span class="badge badge-info">Serial</span>
                                                    }
                                                    else if (modelListInThePlan.Tags == FilmCategory.Cartoon)
                                                    {
                                                    <span class="badge badge-info">Cartoon</span>
                                                    }
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("MovieTemplatePage", "InformationSynchronization", new { id = modelListInThePlan.MovieId })">
                                                    <div class="col-md-10 col-xl-9">
                                                        <style>
                                                            .star-rating {
                                                                display: flex;
                                                                justify-content: center;
                                                                align-items: center;
                                                                width: 100%;
                                                            }

                                                            .star-rating .star {
                                                                width: 20px;
                                                                height: 20px;
                                                                cursor: pointer;
                                                                font-size: 20px;
                                                            }

                                                            .star-rating .star.active {
                                                                color: #f00;
                                                            }
                                                        </style>
                                                        <br>
                                                        <h1>The film's score</h1>
                                                        <div class="star-rating">
                                                            @if (modelListInThePlan.Star != 0)
                                                            {
                                                            for (int i = 1; i <= 10; i++)
                                                            {
                                                            if (i <= modelListInThePlan.Star)
                                                            {
                                                            <span class="star active" onclick="rate(@i,@modelListInThePlan.MovieId)"><i class="remixicon-star-s-fill"></i></span>
                                                            }
                                                            else
                                                            {
                                                            <span class="star" onclick="rate(@i,@modelListInThePlan.MovieId)"><i class="remixicon-star-s-line"></i></span>
                                                            }
                                                            }
                                                            }
                                                            else
                                                            {
                                                            for (int i = 1; i <= 10; i++)
                                                            {
                                                            <span class="star" onclick="rate(@i,@modelListInThePlan.MovieId)"><i class="remixicon-star-s-line"></i></span>
                                                            }
                                                            }
                                                        </div>
                                                    </div>
                                                </a>
                                            </td>
